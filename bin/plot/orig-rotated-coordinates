#!/bin/bash

set -e
set -o pipefail

data=$DTA_DATA

if [ ! $data ]
then
    echo 'Please export DTA_DATA' >&2
    exit 1
fi

driver=${1-1}

# this lets a glob like "*" or "1??"
# get passed in to run multiple plots

for path in $data/driver/$driver
do
    driver=`basename $path`

    for trip in {1..200}
    do
        driver_trip=$path/trip/$trip

        if [ ! -f $driver_trip/orig-rotated-coordinates.svg ]
        then
            Rscript bin/plot/driver/trip/orig-rotated-coordinates $driver $trip
        fi
    done
done
