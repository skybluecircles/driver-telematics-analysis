#!/usr/bin/perl

use Math::Trig;
use Test::More;

$angle = $ARGV[0];

# we're calculating the number of radians needed to rotate
# the angle to pi / 2 (due north)

if ( $angle > 0 ) {
    if ( $angle < pi / 2 ) { 
        $rotation = pi / 2 - $angle;  # quadrant 1
    }
    else {
        $rotation = pi / 2 - $angle;  # quadrant 2
    }
}
else {
    if ( $angle < pi / -2 ) {
        $rotation = pi * ( -3 / 2 ) - $angle;  # quadrant 3
    }
    else {
        $rotation = pi * ( 1 / 2 ) - $angle;  # quadrant 4
    }
}

print $rotation, $/;
