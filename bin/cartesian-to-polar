#!/bin/bash

set -e
set -o pipefail

data=$DTA_DATA

if [ ! $data ]
then
    echo 'Please export DTA_DATA' >&2
    exit 1
fi

for driver in $data/driver/*
do
    for i in {1..200}
    do
        driver_trip=$driver/trip/$i

        if [ ! -f $driver_trip/coordinates-polar ]
        then
            cat $driver_trip/coordinates-cartesian \
          | perl -a -F, bin/util/cartesian-to-polar \
          > $driver_trip/coordinates-polar
        fi
    done
done
