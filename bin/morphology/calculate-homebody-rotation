#!/bin/bash

set -e
set -o pipefail

data=$DTA_DATA

if [ ! $data ]
then
    echo 'Please export DTA_DATA' >&2
    exit 1
fi

driver_id=${1-1}

for driver in $data/driver/$driver_id
do
    for trip in {1..200}
    do
        driver_trip=$driver/trip/$trip

        if [ ! -f $driver_trip/homebody-rotation ]
        then
            angle=$(cut -f 2 -d, $driver_trip/homebody-polar-coordinate)
            perl bin/util/calculate-rotation $angle > $driver_trip/homebody-rotation
        fi
    done
done
