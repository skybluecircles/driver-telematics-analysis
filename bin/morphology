#!/bin/bash

data=$DTA_DATA

if [ ! $data ]
then
    echo "Please define the environment variable DTA_DATA" >&2
    exit 1
fi

driver_id=${1-1}

for driver in $data/driver/$driver_id
do
    driver_id=`basename $driver`

    if [ ! -d $driver ]
    then
        echo "No directory for ($driver)" >&2
        exit 1
    fi

    for i in {1..200}
    do
        echo "$driver_id,$i"
        driver_trip=$driver/trip/$i

        # find the morphologic points

        bin/util/morphology-points \
      < $driver_trip/coordinates-rotated \
      > $driver_trip/morphology-points

        if [ $? != 0 ]
        then
            echo "bin/util/morphology-points exited non-zero" >&2
            exit 1
        fi

        # measure them

        bin/util/morphology-measurements \
      < $driver_trip/morphology-points \
      > $driver_trip/width \
     3> $driver_trip/max-distance-from-origin

        if [ $? != 0 ]
        then
            echo "bin/util/morphology-measurements exited non-zero" >&2
            exit 1
        fi
    done
done

