#!/bin/bash

set -e
set -o pipefail

data=$DTA_DATA

if [ ! $data ]
then
    echo 'Please export DTA_DATA' >&2
    exit 1
fi

driver_id=${1-1}

for driver in $data/driver/$driver_id
do
    for i in {1..200}
    do
        driver_trip=$driver/trip/$i

        if [ ! -f $driver_trip/homebody-polar-coordinate ]
        then
            cat $driver_trip/coordinates-polar \
          | perl -a -F, bin/util/homebody-polar-coordinate \
          > $driver_trip/homebody-polar-coordinate
        fi
    done
done
