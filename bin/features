#!/bin/bash

set -e
set -o pipefail

data=$DTA_DATA

if [ ! $data ]
then
    echo "Please define the environment variable DTA_DATA" >&2
    exit 1
fi

driver_id=${1-1}

features=(
    distance
    max-distance-from-origin
    width
)

for driver in $data/driver/$driver_id
do
    driver_id=`basename $driver`

    if [ ! -d $driver ]
    then
        echo "No directory for ($driver)" >&2
        exit 1
    fi

    for feature in ${features[@]}
    do
        if [ -f $driver/$feature ]
        then
            rm $driver/$feature
        fi
    done

    # I'm concatenating each feature into a single column
    # and then pasting the columns together to form a csv

    for i in {1..200}
    do
        driver_trip=$driver/trip/$i

        for feature in ${features[@]}
        do
            cat $driver_trip/$feature >> $driver/$feature
        done
    done

    IFS=$','
    header="${features[*]}"
    unset IFS

    (
        echo "$header"
        eval "paste -d, $driver/{$header}" # brace expansion
    ) > $driver/features
done
